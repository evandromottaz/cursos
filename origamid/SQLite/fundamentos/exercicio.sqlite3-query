-- database: ./db.sqlite

CREATE TABLE produtos(id INTEGER, nome TEXT, preco INTEGER);

CREATE TABLE clientes(id INTEGER, nome TEXT, email TEXT);

CREATE TABLE compras(id INTEGER, cliente_id INTEGER, produto_id INTEGER, data TEXT);

